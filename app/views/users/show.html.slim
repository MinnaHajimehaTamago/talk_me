= render 'shared/header'

.container
  .content-wrap-mini
    .form-explanation
      h2 送信したサイン
    .form-group
      .users-signs-box
        - if @signs.length != 0
          - @signs.each do |sign|
            .users-sign-wrap
              .sign-user-nickname
                - if sign.user.image.attached?
                  = image_tag(sign.user.image, class:"user-icon-image-small")
                - else
                  = image_tag("header_icon_sample.png", class:"user-icon-small")
                p= sign.user.nickname
                - if sign.favorites.present?
                  i.fas.fa-heart.sign-favo-icon
                  p.favo-message お気に入りされています
              .sign-send-time
                p= sign.created_at.strftime("%m/%d %H:%M")
              = link_to '', sign_path(sign.id), class: 'result-sign-wrap-link'
        - else
          .result-text
            h1 送信したサインはありません
    .form-explanation
      h2 お気に入りしたサイン
    .form-group
      .users-signs-box
        - if @favorite_signs.length != 0
          - @favorite_signs.each do |sign|
            .users-sign-wrap
              .sign-user-nickname
                - if sign.user.image.attached?
                  = image_tag(sign.user.image, class:"user-icon-image-small")
                - else
                  = image_tag("header_icon_sample.png", class:"user-icon-small")
                p= sign.user.nickname
              .sign-send-time
                p= sign.created_at.strftime("%Y/%m/%d %H:%M")
              = link_to '', sign_path(sign.id), class: 'result-sign-wrap-link'
        - else
          .result-text
            h1 お気に入りしたサインはありません

= render 'shared/footer'